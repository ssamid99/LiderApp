@model WarrantyPutCommand

@{
    ViewData["Title"] = "Edit";
}

<h1>Redaktə Et</h1>

<h4>Zəmanət</h4>
<hr />

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Zəmanət Admin Səhifəsi</h4>
                        <span>
                            Bu hissədə zəmanət səhifəsində uyğun
                            dəyişikliklər bilərsiniz
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-action="index">Zəmanət</a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <span>Redaktə Et</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">


                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>

                    </div>
                    <div class="card-block">

                        <form method="post" autocomplete="off" enctype="multipart/form-data">
                            <div class="form-group row">
                                <label asp-for="Title" class="col-sm-2 col-form-label">Başlıq Hissə</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Title" class="form-control" id="tiny"></textarea>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Şəkil</label>
                                <div class="col-sm-5">
                                    <label class="image-viewer" for="image" style="background-image:url(/uploads/images/@Model.ImagePath)"></label>
                                    <input id="image" name="image" type="file" hidden />
                                    <span asp-validation-for="Image" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Text" class="col-sm-2 col-form-label">Əsas Hissə</label>
                                <div class="col-sm-10">
                                    <textarea asp-for="Text" class="form-control" id="tiny"></textarea>
                                    <span asp-validation-for="Text" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary mr-2 fix-btn">Yadda saxla</button>
                                   @* @if (User.HasAccess("admin.blogposts.index"))
                                    }
                                    {*@
                                        <a asp-action="index" class="btn btn-info">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section addjs {

    <script>

        let reader = new FileReader();
        reader.addEventListener('load', function () {
            let imageViewer = document.querySelector('.image-viewer');
            imageViewer.setAttribute('style', `background-image:url(${reader.result})`);
            //url(data;.....)

            console.log(reader.result);
        });
        document.getElementById('image').addEventListener('change', function (e) {

            console.log(e);
            const selectedFile = e.currentTarget.files[0];
            reader.readAsDataURL(selectedFile);

        });


    </script>

