@model RepairOrder

@{
    ViewData["Title"] = "Details";
}

<h1>Detallı</h1>


<h4>Silinmiş Sifarişlər</h4>
<hr />
<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Silinmiş Sifarişlər Admin Səhifəsi</h4>
                        <span>
                            Bu hissədə silinmiş sifarişlər haqqında ətraflı məlumat
                            ala bilərsiz
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                        </li>
                        @*@if (User.HasAccess("admin.rooms.index"))
                        }
                        {*@
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-action="index">Silinmiş Sifarişlər</a>
                        </li>
                        <li class="breadcrumb-item" style="float: left;">
                            <span>Detallı</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">


                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>

                    </div>
                    <div class="card-block">

                        <div>
                            <div class="form-group row">
                                <label asp-for="FullName" class="col-sm-3 col-form-label">Sifarişçi Adı:</label>
                                <p class="fix-row">
                                    @Model.FullName
                                </p>
                            </div>

                            <div class="form-group row">
                                <label asp-for="PhoneNumber" class="col-sm-3 col-form-label">Sifarişçi Telefon Nömrəsi:</label>
                                <div class="fix-row">
                                    @Html.Raw(Model.PhoneNumber)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Text" class="col-sm-3 col-form-label">Sifarişçinin Mesajı:</label>
                               
                                    <div class="fix-row">
                                        @Model.Text
                                    </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ServiceId" class="col-sm-3 col-form-label">Sifarişçinin Tələb Etdiyi Xidmət:</label>
                                <p class="fix-row">
                                    @Model.Services.Name
                                </p>
                            </div>
                            <div class="form-group row">
                                <label asp-for="CreatedDate" class="col-sm-3 col-form-label">Sifarişin Yaranma Tarixi:</label>
                                <div class="fix-row">
                                    @Html.Raw(Model.CreatedDate)
                                </div>
                            </div>
                            @if (Model.DeletedDate != null)
                            {
                                <div class="form-group row">
                                    <label asp-for="DeletedDate" class="col-sm-3 col-form-label">Sifarişçi Silinmə Tarixi:</label>
                                    <div class="fix-row">
                                        @Html.Raw(Model.DeletedDate)
                                    </div>
                                </div>
                            }
                            @if (Model.CreatedbyUserId != null)
                            {
                                <div class="form-group row">
                                    <label asp-for="CreatedbyUserId" class="col-sm-3 col-form-label">Məlumati Yaradan Şəxs:</label>
                                    <div class="fix-row">
                                        @Html.Raw(Model.CreatedbyUserId)
                                    </div>
                                </div>
                            }
                            <div class="form-group row">
                                <div class="col-12 d-flex justify-content-end">
                                    @*@if (User.HasAccess("admin.rooms.edit"))

                                    {
                                    }
                                    *@
                                    @*@if (User.HasAccess("admin.rooms.index"))
                                    }
                                    {*@
                                    <a asp-controller="repairorder" asp-action="deletedindex" class="btn btn-info">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section addcss{
    <style>
        .fix-row {
            text-transform: capitalize;
        }
    </style>
}